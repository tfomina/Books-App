<form method="POST">
  <% if(isRegisterForm){ %>
  <div class="mb-3">
    <label for="name" class="form-label">Имя пользователя</label>
    <input
      type="text"
      class="form-control"
      id="name"
      name="name"
      required
      value="<%= user.name %>"
    />
  </div>
  <% } %>

  <div class="mb-3">
    <label for="email" class="form-label">Email</label>
    <input
      type="email"
      class="form-control"
      id="email"
      name="email"
      required
      value="<%= user.email %>"
    />
  </div>

  <div class="mb-3">
    <label for="password" class="form-label">Пароль</label>
    <input
      type="password"
      class="form-control"
      id="password"
      name="password"
      required
      value="<%= user.password %>"
    />
  </div>

  <div class="mb-3 text-end">
    <button type="submit" class="btn btn-primary w-lg-100">
      <%- btnTitle %>
    </button>
  </div>
</form>
