<%- include("../partials/layout-start", {title: title}) %> <%-
include("../partials/menu") %>

<div class="row">
  <div class="col">
    <h1><%- title %></h1>

    <a class="btn btn-primary" href="/books/create" role="button"
      >Добавить книгу</a
    >

    <% if(books.length) { %>
    <table class="table table-striped table-hover align-middle">
      <thead>
        <tr>
          <th scope="col" class="col col-lg-1 col-sm">#</th>
          <th scope="col" class="col col-lg-9 col-sm">Название</th>
          <th scope="col" class="col col-lg-2 col-sm"></th>
        </tr>
      </thead>
      <tbody>
        <% books.map((el, idx) => { %>
        <tr>
          <th scope="row"><%= idx + 1 %></th>
          <td><%= el.title %></td>
          <td class="text-end">
            <a
              class="btn btn-success"
              href="/books/<%= el.id %>"
              title="Просмотреть"
            >
              <i class="bi bi-eye" aria-hidden="true"></i>
            </a>
            <a
              class="btn btn-primary"
              href="/books/update/<%= el.id %>"
              title="Редактировать"
            >
              <i class="bi bi-pencil" aria-hidden="true"></i>
            </a>
            <form
              action="/books/delete/<%= el.id %>"
              method="POST"
              class="d-inline"
            >
              <button class="btn btn-danger" title="Удалить">
                <i class="bi bi-trash" aria-hidden="true"></i>
              </button>
            </form>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <% }else { %>
    <h3>Записей пока нет</h3>
    <% } %>
  </div>
</div>

<%- include("../partials/layout-end") %>
